{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
    "files": [
    "src/index.ts"
  ],
  "exclude": ["node_modules"],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "genDir": "./dist/waste"
  }
}
